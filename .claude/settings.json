{
  "hooks": {
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/test-agent.sh --fast",
            "statusMessage": "Running quality gates",
            "timeout": 120
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-tool-use-safe-label.sh",
            "statusMessage": "Checking for safe label on gh issue commands",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
